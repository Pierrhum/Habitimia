<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DailyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/background_top_bar_arena"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:src="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/orange_btn" />

        <TextView
            android:id="@+id/title_arena"
            android:layout_width="43dp"
            android:layout_height="27dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/quests"
            app:layout_constraintStart_toStartOf="@id/background_top_bar_arena"
            app:layout_constraintTop_toTopOf="@id/background_top_bar_arena" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>